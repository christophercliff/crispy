#! /bin/bash

declare -a jscs
for i in "$@"; do jscs+=("$i"); done
jscs+=("--config")
jscs+=("./node_modules/crispy/.jscsrc")

declare -a jshint
for i in "$@"; do jshint+=("$i"); done
jshint+=("--config")
jshint+=("./node_modules/crispy/.jshintrc")

./node_modules/crispy/node_modules/.bin/jshint "${jshint[@]}" || exit 1
./node_modules/crispy/node_modules/.bin/jscs "${jscs[@]}" || exit 1
